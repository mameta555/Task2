<div class ="success-text"><%= flash[:success] %></div>

<h1>Books</h1>
<table>
  <tr>
    <th colspan="2">Title</th>
    <th colspan="3">Body</th>
  </tr>

    <% @books.each do |book| %>
    <tr>
      <td colspan="2"><%= book.title %></td>
      <td colspan="3"><%= book.body %></td>
      <td><%= link_to "Show",book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
  <% end %>

</table>
<h2>New book</h2>
<% if @book.errors.any? %>
  <span class="error-count"><%= @book.errors.count %>件のerror</span>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <div class="create-box"><%= f.submit 'Create Book' %></div>
  <% end %>
